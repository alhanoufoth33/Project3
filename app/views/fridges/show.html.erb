<h1>Fridge show</h1>


You are in <%= @fridge.name %> Fridge 
<p>
    <%= @fridge.name %>
</p>

<p>items:</p>
<% @fridge.items.each do |item| %>
    <% item.options.each do |o|%>
    <li>
        <%= link_to o.name, fridge_item_path(item)%>
        <%= link_to 'Delete', fridge_item_path(item), method: :delete %>
    </li>
        
    <% end %>
<% end %>

<p>
    <%= link_to 'Add item', new_fridge_item_path(@fridge) %>
</p>
<br>

<p>Users</p>
<% @fridge.users.each do |user| %>
<li><%= user.email%></li>
<% end %>



<p>
<%= link_to 'Add User To This Fridge', "/fridges/#{@fridge.id}/add_user"	 %>
</p>

<p>
    <%= link_to 'All Fridges', fridges_path %>
</p>

