
 <%= render 'lists/nav' %>
  <h1> Grocery Shopping list</h1>
  
<table class="table">
  <thead>
    <tr>
       <th colspan="2.5"></th>
      <th scope="col"> Item </th>
      <th scope="col">description </th>
      <th scope="col"> Completed </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% @user.lists.each do |list| %>
     <% if list.Completed %>
    <tr class="table-secondary">
      <th colspan="2"></th>
      <td class="striker"> <%= list.tiltle %></td>
      <td class="striker"><%= list.description %> </td>
      <td> 
       <%= form_for(list) do |f| %>
       <%= f.text_field :tiltle, type: 'hidden' %>
       <%=  f.check_box :Completed, :checked => false, :style => 'visibility: hidden'%>
       <%= f.submit "Uncheck", class:'btn btn-outline-secondary btn-sm' %>
      <% end %>
      </td>
      <td> <%= link_to "Edit", edit_list_path(list)%> </td>
      <td> <%= link_to "Delete", list_path(list), method: :Delete, data: {Confirm: "Are you sure?" }%></td>
    </tr>
    <% else %>

     <tr>
      <th colspan="2"></th>
      <td><%= list.tiltle %></td>
      <td><%= list.description %> </td>
      <td> 
       <%= form_for(list) do |f| %>
       <%= f.text_field :tiltle, type: 'hidden' %>
       <%= f.text_field  :description, type: 'hidden' %>
       <%=  f.check_box :Completed, :checked => true, :style => 'visibility: hidden'%>
       <%= f.submit "Check", class:'btn btn-outline-secondary btn-sm' %>
      <% end %>
      </td>
      <td> <%= link_to "Edit", edit_list_path(list)%> </td>
      <td> <%= link_to "Delete", list_path(list), method: :Delete, data: {Confirm: "Are you sure?" }%></td>
    </tr>
        <% end %>
    <% end %>
  </tbody>
</table>
